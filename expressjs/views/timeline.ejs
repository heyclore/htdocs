<div class="container mt-2">
  <div class="col-md-8 p-3 foo mx-auto rounded-lg text-white">
    <h3 class="text-center font-weight-bold">Post Something</h3>
    <form action="/timeline" method="POST">
      <div class="form-group">
        <label for="quotes">Quotes</label>
        <input type="text" class="form-control" name="quotes" value="<%= quotes %>">
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" name="author" value="<%= author %>">
      </div>
        <div class="col text-center">
          <button type="submit" class="btn btn-light bar justify btn-lg">Submit</button>
        </div>
    </form>
  </div>
</div>
<div class="container mt-4">
  <div class="col-md-8 p-3 foo mx-auto rounded-lg text-white">
  <% for(x of query) {%>
    <div class="mb-2">
      <a href="/post/<%= x.username %>" class="foofoo font-weight-bold d-inline text-white"><%= x.username %></a>
      <span><%= moment(x.created_at).fromNow() %></span>
      <% if ( user ) { %>
        <% if(currentUser(cookies).id == x.user_id) { %>
          <div class="d-inline float-right ml-1">
            <form action="/post/<%= x.username %>/delete/<%= x.id %>" method="post">
                <button type="submit" class="bar btn btn-sm bg-white">delete</button>
            </form>
          </div>
          <div class="d-inline float-right ml-1">
              <a type="submit" href="/post/<%= x.username%>/edit/<%= x.id %>" class="bar btn btn-sm bg-white">edit</a>
          </div>
        <% } %>
      <% } %>
      <h6 class="font-italic">“<%= x.quotes %>” - <%= x.author %></h6>
    </div>
  <% } %>
    <div class="col d-flex justify-content-center mt-4">
      <a href="#" class="bar btn btn-sm bg-white ml-1">1</a>
    </div>
  </div>
</div>
