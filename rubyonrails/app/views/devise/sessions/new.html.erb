<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card foobar bar">
        <div class="card-header foo text-white">Login</div>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group row">
            <%= f.label :email, class:'col-md-4 col-form-label text-md-right' %>
            <div class="col-md-6">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class:'col-md-4 col-form-label text-md-right' %>
            <div class="col-md-6">
              <%= f.password_field :password, autocomplete: "current-password", class:'form-control' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group row">
              <div class="col-md-6 offset-md-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, class:'form-check-input' %>
                  <%= f.label :remember_me, class:'form-check-label' %>
                </div>
              </div>
            </div>
          <% end %>

          <div class="form-group row mb 0">
            <div class="col-md-6 offset-md-4">
              <%= f.submit "Log in", class:'btn foo text-white' %>
            </div>
          </div>
        <% end %>
        <!-- <%= render "devise/shared/links" %> -->
        </div>
      </div>
    </div>
  </div>


