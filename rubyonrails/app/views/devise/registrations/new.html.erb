<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card foobar bar">
        <div class="card-header foo text-white">Register</div>
        <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group row">
            <%= f.label :username, class:'col-md-4 col-form-label text-md-right' %>
            <div class="col-md-6">
              <%= f.text_field :username, autofocus: true, autocomplete: "username", class:'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :email, class:'col-md-4 col-form-label text-md-right' %>
            <div class="col-md-6">
              <%= f.email_field :email, autocomplete: "email", class:'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class:'col-md-4 col-form-label text-md-right' %>
            <div class="col-md-6">
              <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password_confirmation, class:'col-md-4 col-form-label text-md-right' %>
            <div class="col-md-6">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
            </div>
          </div>

          <div class="form-group row mb-0">
            <div class="col-md-6 offset-md-4">
              <%= f.submit "Sign up", class:'btn foo text-white' %>
            </div>
          </div>
        <% end %>

        <!-- <%= render "devise/shared/links" %> -->
        </div>
      </div>
    </div>
  </div>
</div>

