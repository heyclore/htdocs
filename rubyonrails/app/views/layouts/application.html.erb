<!DOCTYPE html>
<html>
  <head>
    <title>Rubyonrails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="app">
      <nav class="navbar navbar-expand navbar-dark flex-column flex-md-row bd-navbar foo">
        <div class="container m-1">

          <!-- Left Side Of Navbar -->
          <div class="navbar-nav-scroll">
            <ul class="navbar-nav bd-navbar-nav flex-row">
              <li class="nav-item">
                <%= link_to 'Random Quotes', root_path, class:'nav-link' %>
              </li>
              <li class="nav-item">
                <a class="nav-link {% if request.path == '/timeline' %}active{% endif %}" href="/timeline">Timeline</a>
              </li>
            </ul>
          </div>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <!-- Right Side Of Navbar -->
            <ul class="navbar-nav ml-auto">
              <!-- Authentication Links -->
              <% if user_signed_in? %>
              <li class="nav-item">
                <a class="nav-link active" href="{{ url_for('post_user', username=current_user.username) }}"><%= current_user.username %></a>
              </li>
              <li class="nav-item">
                <!-- <a class="nav-link" href="{{ url_for('logout') }}">logout</a> -->
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class:'nav-link' %>
              </li>
              <li class="nav-item">
                <!-- <a class="nav-link" href="{{ url_for('logout') }}">logout</a> -->
                <%= link_to 'Edit', edit_user_registration_path, class:'nav-link' %>
              </li>
              <% else %>
              <li class="nav-item">
                <!-- <a class="nav-link {% if request.path == '/login' %}active{% endif %}" href="{{ url_for('login') }}">Login</a> -->
                <%= link_to 'Login', new_user_session_path, class:'nav-link' %>
              </li>
              <li class="nav-item">
                <!-- <a class="nav-link {% if request.path == '/register' %}active{% endif %}" href="{{ url_for('register') }}">Register</a> -->
                <%= link_to 'Register', new_user_registration_path, class:'nav-link' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <div class="py-4">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
